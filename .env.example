# Sistema de Gestión de Cursos y Talleres
# Base de datos local - No requiere configuración externa

# Configuración de la aplicación
VITE_APP_NAME="Sistema de Gestión Académica"
VITE_APP_VERSION="1.0.0"

# Configuración local
VITE_STORAGE_PREFIX="cursos_talleres_"
VITE_MAX_FILE_SIZE="5242880"  # 5MB en bytes

# Configuración de exportación
VITE_EXPORT_FORMAT="csv"
VITE_DATE_FORMAT="es-AR"

# Configuración de la interfaz
VITE_THEME="academic"
VITE_PRIMARY_COLOR="#1e40af"
VITE_SECONDARY_COLOR="#3b82f6"

# Configuración de notificaciones (para futuras implementaciones)
# VITE_WHATSAPP_API_URL=""
# VITE_EMAIL_SERVICE_URL=""
# VITE_NOTIFICATION_ENABLED="false"